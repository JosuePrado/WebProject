@page "/login"
@inject HttpClient Http

<h3>Login</h3>


<EditForm Model="@Model" OnValidSubmit="LoginUser" FormName="registerForm">
    <div class="form-field">
        <label>Email:</label>
        <div>
            <InputText Class="form-control" @bind-Value="Model!.Email" />
        </div>
    </div>
    <div class="form-field">
        <label>Password:</label>
        <div>
            <InputText Class="form-control" @bind-Value="Model!.Password" />

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
</EditForm>

@if (!string.IsNullOrEmpty(NotificationMessage))
{
    <div class="alert alert-info">@NotificationMessage</div>
}

@code {


    [SupplyParameterFromForm]
    private UserModel Model { get; set; } = new UserModel();
    private string? NotificationMessage { get; set; }
    private async Task LoginUser()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("http://localhost:5268/api/users/login", Model);
            if (response.IsSuccessStatusCode)
            {
                NotificationMessage = "Login successful!";
            }
            else
            {
                NotificationMessage = "Login failed. Please check your credentials.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");

        }
    }

}